default_platform(:ios)

platform :ios do
  desc "Build the iOS app"
  lane :build do
    # Prepare CI environment (sets keychain partitioning rules for codesign)
    setup_ci

    # Optionally create/use a temporary keychain on CI to avoid UI prompts
    if ENV["MATCH_KEYCHAIN_NAME"] && ENV["MATCH_KEYCHAIN_PASSWORD"]
      create_keychain(
        name: ENV["MATCH_KEYCHAIN_NAME"],
        password: ENV["MATCH_KEYCHAIN_PASSWORD"],
        default_keychain: true,
        unlock: true,
        timeout: 3600,
        lock_when_sleeps: true
      )
    end

    # App Store Connect API key (avoids Apple ID 2FA in CI)
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    # Fetch provisioning profiles/certificates via match
    match(
      type: "appstore",
      app_identifier: "com.onologroup.orders",
      git_url: ENV["MATCH_GIT_URL"] || "https://github.com/KKNMAL003/kikionolo.git",
      git_branch: ENV["MATCH_GIT_BRANCH"] || "main",
      readonly: false,
      keychain_name: ENV["MATCH_KEYCHAIN_NAME"] || "login.keychain-db",
      keychain_password: ENV["MATCH_KEYCHAIN_PASSWORD"],
      api_key: api_key
    )

    # Force project to Manual signing for the app target (both project and target level)
    automatic_code_signing(
      path: "OnoloGas.xcodeproj",
      use_automatic_signing: false,
      team_id: ENV["APPLE_TEAM_ID"]
    )
    # Pin Release configuration to the App Store profile and Distribution identity
    update_project_provisioning(
      xcodeproj: "OnoloGas.xcodeproj",
      target_filter: "OnoloGas",
      build_configuration: "Release",
      profile: ENV["sigh_com.onologroup.orders_appstore_profile-name"] || "match AppStore com.onologroup.orders",
      code_signing_identity: "Apple Distribution",
      team_id: ENV["APPLE_TEAM_ID"],
      use_automatic_signing: false
    )

    # Use the fetched App Store profile name (sigh exports this env var)
    profile_name = ENV["sigh_com.onologroup.orders_appstore_profile-name"] || "match AppStore com.onologroup.orders"

    build_app(
      workspace: "OnoloGas.xcworkspace",
      scheme: "OnoloGas",
      clean: true,
      output_directory: "./build",
      output_name: "OnoloGas.ipa",
      # Force manual signing during archive to avoid automatic Development profile selection
      xcargs: [
        "CODE_SIGNING_ALLOWED=YES",
        "CODE_SIGNING_REQUIRED=YES",
        "CODE_SIGN_STYLE=Manual",
        "DEVELOPMENT_TEAM=#{ENV['APPLE_TEAM_ID']}",
        "PROVISIONING_PROFILE_SPECIFIER=#{profile_name}"
      ].join(" "),
      export_options: {
        method: "app-store",
        teamID: ENV["APPLE_TEAM_ID"],
        provisioningProfiles: {
          "com.onologroup.orders" => profile_name
        }
      }
    )
  end

  desc "Build and upload to TestFlight"
  lane :release do
    build
    pilot(
      ipa: "./build/OnoloGas.ipa",
      skip_submission: true,
      distribute_external: false,
      api_key: app_store_connect_api_key(
        key_id: ENV["ASC_KEY_ID"],
        issuer_id: ENV["ASC_ISSUER_ID"],
        key_content: ENV["ASC_KEY_CONTENT"],
        is_key_content_base64: true
      )
    )
  end
end
