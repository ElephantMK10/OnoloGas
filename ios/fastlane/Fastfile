default_platform(:ios)

platform :ios do
  desc "Build the iOS app"
  lane :build do
    xcversion(version: "15.2")
    build_app(
      workspace: "OnoloGas.xcworkspace",
      scheme: "OnoloGas",
      clean: true,
      output_directory: "./build",
      output_name: "OnoloGas.ipa",
      export_options: {
        method: "app-store",
        teamID: ENV["APPLE_TEAM_ID"]
      }
    )
  end
end
